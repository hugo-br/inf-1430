{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2015",
    "module": "commonjs",
    "types": ["node", "webpack-env", "jest"],
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "outDir": ".out/src",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@root/*": ["./*"],
      "@src/*": ["src/*"],
      "@config/*": ["config/*"],
      "@common/*": ["src/common/*"],
      "@frontend/*": ["frontend/*"],
      "@backend/*": ["backend/*"],
      "@public/*": ["public/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "./src/**/*",
    "./tests/**/*",
    "./backend/**/*",
    "./frontend/**/*",
    "./public/**/*",
    "**/*.ts"
  ],
  "exclude": ["node_modules"]
}
